---
import { Image } from 'astro:assets';

type Props = {
	path: string;
	name?: string;
};

const { path, name } = Astro.props;

const url = new URL(path, 'https://minecraft.wiki');
---

<a
	href={url.href}
	class="relative bottom-[-7px] mx-[1px] w-fit inline-flex gap-1 items-center text-pink-300"
>
	<Image
		src="https://minecraft.wiki/images/Favicon.ico"
		alt="Minecraft Wiki"
		inferSize
		class="size-6"
	/>

	{name && name + ' â€¢ '}

	Minecraft Wiki
</a>
